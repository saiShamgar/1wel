<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Agent.AgentSignUPBankDetails"
    android:background="#F7F5F5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/white_round_background"
                android:focusableInTouchMode="true">

                //bank account details
                <EditText
                    android:id="@+id/agent_signup_AadharNum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="80dp"
                    android:hint="Enter your Aadhar"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_security_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"/>
                <EditText
                    android:id="@+id/agent_signup_Bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter your Bank name"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/agent_signup_AadharNum"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_security_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:id="@+id/agent_signup_Bank_Account_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter your Bank A/c no"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/agent_signup_Bank_name"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_security_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/agent_signup_ReEnterBank_Account_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="re-enter your Bank A/c no"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/agent_signup_Bank_Account_num"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_security_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:id="@+id/agent_signup_Bank_Ifsc_Code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter your Bank Ifsc code"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/agent_signup_ReEnterBank_Account_num"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_security_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/agent_submit_bank_details"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="Next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_below="@+id/agent_signup_Bank_Ifsc_Code"
                    android:background="@drawable/green_round_background"
                    android:visibility="visible" />

            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>
    </RelativeLayout>
</ScrollView>