<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.providers.ProviderSignUpActivity"
    android:background="@drawable/background_image">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/flprovider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/white_round_background">

                //personal details

                <EditText
                    android:id="@+id/provider_signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="80dp"
                    android:hint="Enter your name"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_person_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"/>
                <EditText
                    android:id="@+id/provider_signup_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:hint="Enter phone number"
                    android:textSize="15sp"
                    android:layout_below="@+id/provider_signup_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_phone_android_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"/>

                <AutoCompleteTextView
                    android:id="@+id/provider_signup_Location"
                    android:layout_height="50dp"
                    android:inputType="text|textMultiLine"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="enter Location"
                    android:layout_marginStart="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/provider_signup_phone"
                    android:background="@drawable/stroke_background"
                    android:drawableEnd="@drawable/ic_location_on_black_24dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:visibility="visible">

                </AutoCompleteTextView>
                <Spinner
                    android:id="@+id/providerService"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"
                    android:layout_below="@+id/provider_signup_Location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:background="@drawable/stroke_background"/>
                <Spinner
                    android:id="@+id/providerServiceSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:textSize="15sp"
                    android:layout_below="@+id/providerService"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:background="@drawable/stroke_background"/>

                <EditText
                    android:id="@+id/provider_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:text="Enter your date of birth"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/providerServiceSubCategory"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"
                    android:inputType="date"
                    android:imeOptions="actionDone"/>

                <EditText
                    android:id="@+id/provider_signup_website_url"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="5dp"
                    android:hint="Enter website url(optional)"
                    android:textSize="15sp"
                    android:layout_below="@+id/provider_date_of_birth"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/provider_submit_personal_details"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:text="Next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_below="@+id/provider_signup_website_url"
                    android:background="@drawable/green_round_background"
                    android:visibility="visible"/>

                //user Profile pic and gender

                <RadioGroup
                    android:id="@+id/radioGroupProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <RadioButton
                        android:id="@+id/provider_radio_btn_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:layout_marginEnd="50dp"/>
                    <RadioButton
                        android:id="@+id/provider_radio_btn_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"/>
                </RadioGroup>

                <ImageView
                    android:id="@+id/provider_image"
                    android:layout_below="@+id/radioGroupProvider"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/batman"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/upload_image_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroupProvider"
                    android:layout_toRightOf="@+id/provider_image"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="20dp"
                    android:text="Upload Image"
                    android:textAllCaps="false"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/provider_reg_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/provider_image"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:background="@drawable/green_round_background"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                //mobile verification
                <TextView
                    android:id="@+id/txt_otp_hint_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otp has been sent to you number"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/provider_signup_virification"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter your verification code"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/txt_otp_hint_provider"
                    android:layout_marginStart="50sp"
                    android:background="@drawable/stroke_background"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:drawableEnd="@drawable/ic_lock_black_24dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/provider_verification_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/provider_signup_virification"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:background="@drawable/green_round_background"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/batman"/>
        </FrameLayout>



    </RelativeLayout>


</ScrollView>